{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"lib": ["ES6"],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"rootDir": "./",
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"utils/*": ["utils/*"],
			"wss/*": ["bin/wss/*"],
			"wdt/*": ["bin/wdt/*"]
		},
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["bin/**/*.ts", "utils/**/*.ts", "./package.json", "index.d.ts"],
	"exclude": ["test/**/*.ts", "node_modules"],
	"copyFiles": {
		"include": ["README.md", "LICENSE"]
	}
}
